# SME Debt Management Tool - Production Configuration

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-change-this

# Email Configuration for Feedback
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@smedebttool.com

# Database Configuration (if needed in future)
DATABASE_URL=sqlite:///sme_debt_tool.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Configuration
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Performance Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# API Configuration
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30  # seconds

# External Services (if needed)
KFW_API_URL=https://api.kfw.de
EU_FUNDING_API_URL=https://ec.europa.eu/info/funding-tenders
